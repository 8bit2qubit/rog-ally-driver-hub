{
  "name": "rog-ally-driver-hub",
  "version": "0.0.1",
  "description": "A streamlined driver viewer for the ASUS ROG Ally series.",
  "scripts": {
    "build:css": "tailwindcss -i ./src/style.css -o ./dist/css/style.css --minify",
    "copy:html": "copyfiles -u 1 ./src/*.html ./dist",
    "build": "npm-run-all build:css copy:html",
    "watch:css": "tailwindcss -i ./src/style.css -o ./dist/css/style.css --watch",
    "watch:html": "chokidar \"./src/**/*.html\" -c \"npm run copy:html\"",
    "dev": "npm-run-all --parallel watch:css watch:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8bit2qubit/rog-ally-driver-hub.git"
  },
  "keywords": [],
  "author": "",
  "license": "CC-BY-NC-SA-4.0",
  "bugs": {
    "url": "https://github.com/8bit2qubit/rog-ally-driver-hub/issues"
  },
  "homepage": "https://github.com/8bit2qubit/rog-ally-driver-hub#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18"
  }
}